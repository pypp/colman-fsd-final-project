{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "Node",
    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "src",

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
