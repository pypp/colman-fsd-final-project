{
  "name": "server",
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:bg": "npm run build && nohup node dist/server.js > server.log 2>&1 &",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/tests/**/*.test.ts"],
    "modulePathIgnorePatterns": ["<rootDir>/dist/"]
  },
  "dependencies": {
    "@repo/types": "*",
    "@types/cors": "^2.8.19",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
